class Solution {
public:
    vector<string> addOperators(string num, int target) {
        vector<string> result;
        string path;
        backtrack(num, target, 0, 0, 0, path, result);
        return result;
    }
    
private:
    void backtrack(const string& num, int target, int pos, 
                   long long curr, long long prev, string path, vector<string>& result) {
       
        if (pos == num.length()) {
            if (curr == target) {
                result.push_back(path);
            }
            return;
        }
        
       
        for (int i = pos; i < num.length(); i++) {
            
            if (i != pos && num[pos] == '0') break;
            
          
            string currStr = num.substr(pos, i - pos + 1);
            
         
            if (currStr.length() > 10) break;  
            
            long long currNum;
            try {
                currNum = stoll(currStr);  
            } catch (...) {
                break; 
            }
            
            if (pos == 0) {
                
                backtrack(num, target, i + 1, currNum, currNum, currStr, result);
            } else {
                
                backtrack(num, target, i + 1, curr + currNum, currNum, 
                         path + "+" + currStr, result);
                
               
                backtrack(num, target, i + 1, curr - currNum, -currNum, 
                         path + "-" + currStr, result);
                
              
                backtrack(num, target, i + 1, curr - prev + prev * currNum, 
                         prev * currNum, path + "*" + currStr, result);
            }
        }
    }
};
